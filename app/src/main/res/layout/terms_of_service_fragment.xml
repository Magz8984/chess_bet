<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:scrollbars="vertical"
    android:layout_height="match_parent">

    <WebView
        android:id="@+id/tocbrowser"
        android:layout_width="match_parent"
        android:layout_height="500dp"/>

    <CheckBox
        android:id="@+id/tocaccept"
        android:layout_below="@id/tocbrowser"
        android:fontFamily="@font/chakrapetchbold"
        android:layout_centerHorizontal="true"
        android:text="Accept"
        android:layout_width="wrap_content"
        android:layout_height="30sp"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@id/tocaccept"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/btnDone"
            android:layout_margin="5dp"
            android:background="@color/bootstrap_green"
            android:text="Done"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnCancel"
            android:layout_margin="5dp"
            android:background="@color/bootstrap_red"
            android:text="Cancel"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>