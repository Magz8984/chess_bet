<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#262626"
    android:paddingTop="20sp"
    android:paddingLeft="5sp"
    android:paddingRight="5sp"
    tools:context=".MatchActivity"
    android:paddingStart="5sp"
    android:paddingEnd="5sp">

    <Switch
        android:layout_below="@+id/gameDurations"
        android:id="@+id/matchCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:checked="false"
        android:theme="@style/switchCustom"
        android:text="@string/match_on_rating"
        android:textColor="@color/white"
        android:switchPadding="30sp"
        android:fontFamily="@font/chakrapetchbold"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

    <GridView
        android:id="@+id/gameDurations"
        android:layout_width="match_parent"
        android:columnWidth="90dp"
        android:numColumns="auto_fit"
        android:verticalSpacing="10dp"
        android:horizontalSpacing="10dp"
        android:stretchMode="columnWidth"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10sp"
        android:id="@+id/btnRatingRange"
        android:text="@string/rating_range"
        android:layout_below="@id/matchCheck"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/default_preview_height"
        android:textColor="@color/white"
        android:background="@color/bg_register"
        android:padding="5sp"
        />
    <TextView
        android:id="@+id/txtRandomMatches"
        android:layout_below="@id/btnRatingRange"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/random_matches"
        android:fontFamily="@font/chakrapetchbold"
        android:textColor="@color/white"
        android:textSize="20sp"/>

    <RelativeLayout
        android:background="@color/bg_register"
        android:paddingTop="20sp"
        android:layout_below="@id/txtRandomMatches"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btnFindMatch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/play_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_margin="16dp"/>
</RelativeLayout>