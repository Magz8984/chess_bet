<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_holder"
        android:layout_width="match_parent"
        android:layout_height="175dp">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/profile_pic_wrapper"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/profile_photo"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@mipmap/ic_launcher_round"/>
            </FrameLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/existingEmail"
                android:textColor="@color/colorPrimaryYellow"
                android:text="@string/email"
                android:layout_below="@id/profile_pic_wrapper"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_below="@id/profile_holder"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:layout_marginTop="10dp"
            android:hint="@string/new_username"
            android:textAlignment="center"
            android:id="@+id/txtUserNameEdit"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textCursorDrawable="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="@string/new_email"
            android:id="@+id/txtEmailEdit"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textCursorDrawable="@color/colorPrimary"
            android:layout_marginBottom="10dp"
            android:textSize="15sp"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="@string/new_password"
            android:id="@+id/txtPasswordEdit"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

        <EditText
            android:hint="@string/old_password"
            android:id="@+id/txtOldPasswordEdit"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:textCursorDrawable="@color/colorPrimary"
            android:textAlignment="center"
            android:textSize="15sp"
            android:inputType="textPassword"
            android:layout_height="wrap_content" />

        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btnSaveProfile"
            android:textAllCaps="false"
            android:text="@string/save"
            android:padding="5dp"
            android:layout_margin="10dp"
            android:fontFamily="@font/chakrapetchbold"
            android:textSize="15sp"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:background="@color/colorPrimaryYellow"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>