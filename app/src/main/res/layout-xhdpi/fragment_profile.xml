<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/profile_holder"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/profile_pic_wrapper"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_marginTop="20dp"
                    android:id="@+id/profile_photo"
                    android:layout_width="125dp"
                    android:layout_height="125dp"
                    android:src="@mipmap/ic_launcher_round"/>
            </FrameLayout>

            <TextView
                android:layout_marginTop="15dp"
                android:id="@+id/existingEmail"
                android:textColor="@color/colorPrimaryYellow"
                android:text="@string/email"
                android:layout_below="@id/profile_pic_wrapper"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <ScrollView
        android:layout_below="@id/profile_holder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:layout_marginTop="30dp"
                android:hint="@string/new_username"
                android:backgroundTint="@color/colorPrimary"
                android:textAlignment="center"
                android:id="@+id/txtUserNameEdit"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/new_email"
                android:id="@+id/txtEmailEdit"
                android:textAlignment="center"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:textCursorDrawable="@color/colorPrimary"
                android:layout_marginBottom="20dp"
                android:textSize="15sp"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/new_password"
                android:id="@+id/txtPasswordEdit"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />

            <EditText
                android:hint="@string/old_password"
                android:id="@+id/txtOldPasswordEdit"
                android:layout_width="match_parent"
                android:layout_marginLeft="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="20dp"
                android:textCursorDrawable="@color/colorPrimary"
                android:textAlignment="center"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </ScrollView>



    <ProgressBar
        android:layout_above="@id/btnSaveProfile"
        android:layout_centerHorizontal="true"
        android:id="@+id/progress_bar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/btnSaveProfile"
        android:layout_alignParentBottom="true"
        android:textAllCaps="false"
        android:text="@string/save"
        android:padding="10dp"
        android:layout_margin="20dp"
        android:fontFamily="@font/chakrapetchbold"
        android:textSize="15sp"
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:background="@color/colorPrimaryYellow"
        android:layout_height="wrap_content" />

</RelativeLayout>