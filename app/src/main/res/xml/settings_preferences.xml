<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <PreferenceCategory
        app:key="notifications_category"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Enable message notifications"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="help_category"
        app:title="Help">

        <Preference
            app:key="feedback"
            app:summary="Report technical issues or suggest new features"
            app:title="Send feedback"/>

    </PreferenceCategory>

    <PreferenceCategory
        app:key="account"
        app:title="Account">

        <Preference
            app:key="reset_pin"
            app:summary="Pin reset prompt will be sent to your email address"
            app:title="Reset Pin"/>

        <Preference
            app:key="sign_out"
            app:summary="Takes you back to login section"
            app:title="Sign Out"/>


    </PreferenceCategory>


</PreferenceScreen>