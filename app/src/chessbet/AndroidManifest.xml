<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:name="chessbet.Application"
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/icon"
        android:label="${appNameValue} ${env}"
        android:largeHeap="true"
        android:roundIcon="@mipmap/icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="chessbet.app.com.MainActivity"/>
        <activity android:name="chessbet.app.com.LoginActivity" />
        <activity android:name="chessbet.utils.Permissions" />
        <activity android:name="chessbet.app.com.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name="chessbet.services.MatchService"
            android:icon="@drawable/chesslogo"
            android:label="@string/match_service" />
    </application>

</manifest>