<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="chessbet.app.com.SplashScreen">

    <LinearLayout
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:src="@drawable/chessbetlogo"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:contentDescription="@string/logo" />

    </LinearLayout>

    <TextView
        android:textColor="@color/colorPrimaryYellow"
        android:textSize="17sp"
        android:fontFamily="@font/chakrapetchbold"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/company"
        android:text="@string/powered_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/company"
        android:layout_margin="5dp"
        android:text="@string/company"
        android:fontFamily="@font/monotonregular"
        android:textColor="@color/colorPrimaryYellow"
        android:textSize="22sp"
        android:layout_alignParentBottom="true"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
