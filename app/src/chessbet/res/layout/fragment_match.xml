<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MatchFragment"
    android:background="@drawable/homebg">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <Button
                android:id="@+id/btnRatingLess"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_200"
                android:background="@drawable/rounded_button"/>

            <Button
                android:id="@+id/btnRandomChallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/random"
                android:textAllCaps="false"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/rounded_selected_button"/>

            <Button
                android:id="@+id/btnRatingMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/_500"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/btnKes1000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kes_1000"
                android:background="@drawable/rounded_button"/>

            <Button
                android:id="@+id/btnKes500"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kes_500"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/rounded_button"/>

            <Button
                android:id="@+id/btnKes250"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kes_250"
                android:background="@drawable/rounded_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btnKes100"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kes_100"
                android:layout_marginRight="5dp"
                android:background="@drawable/rounded_button"
                android:layout_marginEnd="5dp" />

            <Button
                android:id="@+id/btnKes50"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/kes_50"
                android:layout_marginLeft="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:background="@drawable/rounded_selected_button"
                android:layout_marginStart="5dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/advert"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="100dp"/>
        </LinearLayout>

        <com.github.jorgecastilloprz.FABProgressCircle
            android:id="@+id/fabProgressCircle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            app:arcColor="@color/colorPrimary"
            app:arcWidth="5dp">

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btnFindMatch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play_button"
                app:rippleColor="@color/colorPrimary"
                app:elevation="20dp"
                app:borderWidth="0dp"
                android:layout_margin="16dp"
                />
        </com.github.jorgecastilloprz.FABProgressCircle>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>