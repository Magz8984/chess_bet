<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.TermsConditionsFragment">

    <TextView
        android:textSize="30sp"
        android:fontFamily="@font/chakrapetchbold"
        android:textColor="@color/colorPrimary"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/txtTitle"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <WebView
        android:id="@+id/webViewTerms"
        android:layout_below="@+id/txtTitle"
        android:layout_width="match_parent"
        android:layout_above="@+id/btnAcceptTerms"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/rounded_selected_button"
        android:id="@+id/btnAcceptTerms"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="@string/accept_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>